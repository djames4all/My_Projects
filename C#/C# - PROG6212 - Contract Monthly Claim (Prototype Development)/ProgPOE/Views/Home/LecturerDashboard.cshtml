@{
    ViewData["Title"] = "Lecturer Dashboard";
}

<!-- ST10393280 -->
<div class="container mt-5" style="max-width: 1200px; margin: auto;">
    <h2 class="mb-4 text-center">Lecturer Dashboard</h2>
    <div class="card shadow-sm mb-4" style="border-radius: 10px;">
        <div class="card-body" style="display: flex; justify-content: space-between; align-items: center;">
            <a id="submitClaimBtn" class="btn btn-success mb-3" href="#" style="padding: 10px 20px; font-weight: bold;">
                <i class="fas fa-plus-circle"></i> Submit New Claim
            </a>
            <div style="display: flex; gap: 15px;">
                <div class="text-center">
                    <h4>R8000</h4>
                    <p>Total Claims</p>
                </div>
                <div class="text-center">
                    <h4>101</h4>
                    <p>Hours Worked</p>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm" style="border-radius: 10px;">
        <div class="card-header bg-success text-white" style="border-radius: 10px 10px 0 0;">Claim History</div>
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>Date</th>
                        <th>Claim Amount</th>
                        <th>Hours Worked</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>10/09/2024</td>
                        <td>R1200</td>
                        <td>20</td>
                        <td class="status-pending">Pending</td>
                        <td><button class="btn btn-info btn-sm viewBtn"><i class="fas fa-eye"></i> View</button></td>
                    </tr>
                    <tr>
                        <td>21/05/2024</td>
                        <td>R2000</td>
                        <td>32</td>
                        <td class="status-approved">Approved</td>
                        <td><button class="btn btn-info btn-sm viewBtn"><i class="fas fa-eye"></i> View</button></td>
                    </tr>
                    <tr>
                        <td>15/02/2024</td>
                        <td>R3800</td>
                        <td>49</td>
                        <td class="status-rejected">Rejected</td>
                        <td><button class="btn btn-info btn-sm viewBtn"><i class="fas fa-eye"></i> View</button></td>
                    </tr>
                    <tr>
                        <td>11/02/2024</td>
                        <td>R1000</td>
                        <td>12</td>
                        <td class="status-rejected">Pending</td>
                        <td><button class="btn btn-info btn-sm viewBtn"><i class="fas fa-eye"></i> View</button></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modal for Submit New Claim -->
<div class="modal fade" id="submitClaimModal" tabindex="-1" role="dialog" aria-labelledby="submitClaimModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="submitClaimModalLabel">Submit New Claim</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="claimDate">Date</label>
                        <input type="date" class="form-control" id="claimDate">
                    </div>
                    <div class="form-group">
                        <label for="claimAmount">Claim Amount</label>
                        <input type="number" class="form-control" id="claimAmount" placeholder="Enter amount">
                    </div>
                    <div class="form-group">
                        <label for="hoursWorked">Hours Worked</label>
                        <input type="number" class="form-control" id="hoursWorked" placeholder="Enter hours">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="submitClaim()">Submit Claim</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal for View Claim -->
<div class="modal fade" id="viewClaimModal" tabindex="-1" role="dialog" aria-labelledby="viewClaimModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="viewClaimModalLabel">View Claim Details</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p><strong>Date:</strong> <span id="viewClaimDate"></span></p>
                <p><strong>Amount:</strong> R<span id="viewClaimAmount"></span></p>
                <p><strong>Hours Worked:</strong> <span id="viewHoursWorked"></span></p>
                <p><strong>Status:</strong> <span id="viewClaimStatus"></span></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- Scripts -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
<script src="https://kit.fontawesome.com/a076d05399.js"></script>
<script>
    // Open Submit Claim Modal
    document.getElementById('submitClaimBtn').addEventListener('click', function(e) {
        e.preventDefault();
        $('#submitClaimModal').modal('show');
    });

    // Simulate Claim Submission
    function submitClaim() {
        alert('Claim submitted successfully!');
        $('#submitClaimModal').modal('hide');
    }

    // Open View Claim Modal and populate data
    $('.viewBtn').on('click', function() {
        $('#viewClaimDate').text('10/09/2024');
        $('#viewClaimAmount').text('1200');
        $('#viewHoursWorked').text('20');
        $('#viewClaimStatus').text('Pending');
        $('#viewClaimModal').modal('show');
    });
</script>
