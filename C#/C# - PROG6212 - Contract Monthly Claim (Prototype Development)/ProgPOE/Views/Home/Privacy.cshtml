@{
    ViewData["Title"] = "Privacy Policy";
}

<!-- ST10393280 -->
<div class="container mt-5">
    <div class="card shadow-sm p-4">
        <h1 class="mb-4 text-primary">Privacy Policy</h1>
        <p class="lead">Your privacy is important to us. This Privacy Policy outlines how we handle and protect your personal data.</p>

        <section class="mt-4">
            <h3 class="text-secondary">Information We Collect</h3>
            <p>We collect various types of information, including but not limited to your name, contact information, and data relevant to processing your claims.</p>
        </section>

        <section class="mt-4">
            <h3 class="text-secondary">How We Use Your Information</h3>
            <p>Your information is used to manage your claims efficiently, improve our services, and communicate with you as necessary.</p>
        </section>

        <section class="mt-4">
            <h3 class="text-secondary">Data Security</h3>
            <p>We implement robust security measures to ensure your data is protected against unauthorized access, alteration, or disclosure.</p>
        </section>

        <section class="mt-4">
            <h3 class="text-secondary">Contact Us</h3>
            <p>If you have any questions or need further information, please <a href="mailto:support@cmcs.com">contact our support team</a>.</p>
        </section>
    </div>
</div>

<style>
    .container {
        max-width: 800px;
    }
    .card {
        border: none;
        border-radius: 8px;
        background-color: #f9f9f9;
    }
    h1, h3 {
        font-family: 'Arial', sans-serif;
    }
    p {
        font-family: 'Georgia', serif;
    }
    .text-primary {
        color: #007bff;
    }
    .text-secondary {
        color: #6c757d;
    }
</style>
